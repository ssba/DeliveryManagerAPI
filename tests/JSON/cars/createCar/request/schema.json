{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "pattern": "^cars$"
        },
        "attributes": {
          "type": "object",
          "properties": {
            "car": {
              "type": "string"
            },
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            },
            "area": {
              "type": "number"
            }
          },
          "required": [
            "car",
            "width",
            "height",
            "area"
          ]
        }
      },
      "required": [
        "type",
        "attributes"
      ]
    }
  },
  "required": [
    "data"
  ]
}